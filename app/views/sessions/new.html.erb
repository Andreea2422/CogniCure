<main id="main">
  <% provide(:title, "Log in") %>

  <div class="my-account-header page-title normal-title">
    <div class="page-title-inner flex-row container">
      <div class="flex-col flex-grow text-center">
        <h1 class="uppercase mb-0">Log in</h1>
      </div>
    </div>
  </div>

  <div class="article-form">
<!--    <div class="col-md-6 col-md-offset-3">-->
      <%= form_with(url: login_path, scope: :session, local: true) do |f| %>
        <%= f.label :email, class: 'title-form' %>
        <%= f.email_field :email, class: 'my-form-control' %>

        <%= f.label :password, class: 'title-form' %>
        <%= f.password_field :password, class: 'my-form-control' %>

        <%= f.label :remember_me, class: "checkbox inline" do %>
          <%= f.check_box :remember_me %>
          <span>Remember me on this computer</span>
        <% end %>

        <%= f.submit "Log in", class: "my-form-button" %>
      <% end %>

      <p class="my-form-subtext">New user? <%= link_to "Sign up now!", signup_path %></p>
<!--    </div>-->
  </div>

</main>