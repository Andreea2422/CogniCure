                Settings
              </li>
            <%end %>
            <%=link_to "#", class: "nav-link" do %>
              <li class="account-li">
                ??
              </li>
            <%end %>
            <%=link_to logout_path, method: :delete, class: "nav-link" do %>
              <li class="account-li">
                Log Out
              </li>
            <%end %>
          </ul>
        </div>

        <div class="large-9 col">
          <div class="profile-content">
